page{  
  height: 100%;
}  
.container {  
  /* display: flex;
  align-items: center;
  justify-content: center; */
  width: 100%;  
  height: 100%;
  box-sizing: border-box; 
  position: relative; 
}
.navLeft{   
  width: 25%;  
  height: 100%; 
  display: inline-block;
  text-align: center; 
  border-right: 2rpx solid #ccc; 
}
.navRight{
  width: 70%;
  padding: 20rpx;
  position: absolute;
  top: 0;
  right: 0;
   flex: 1; 
}
.left-item{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 16px;
  color: #666;
  box-sizing: border-box;
}
.left-item.on{
  border-left: 8rpx solid #aa976c;
  color: #aa976c;
  font-weight: bold;
}
.right-item{
  font-size: 16px;
  color: #666;
  width: 33.33%;
  float: left;
  text-align: center;
}
.right-item image{
  width: 140rpx;
  height: 140rpx;
  margin-top: 20rpx;
}
.right-item text{
  display: block;
  margin-top: 20rpx;
}
.noData{
  font-size: 16px;
  color: #666;
  text-align: center;
  margin-top: 40rpx;
}
.navRight-title{
  font-size: 16px;
  color: #aa976c;
  display: inline-block;
  width: 100%;
  text-align: center; 
  position: relative;
}
.navRight-title::after,
.navRight-title::before{
  content: "";
  position: absolute;
  right: 130rpx;
  top: 20rpx;
  width: 50rpx;
  height: 4rpx;
  background: #aa976c;
}
.navRight-title::before{
   left: 130rpx;
}
.navRight-img{
  width: 100%;
  height: 300rpx;
}